<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <com.letv.leui.widget.ScreenRecordingView
            android:id="@+id/remote_wave"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#7fffffff"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/remote_record_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/remote_record_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

            <TextView
                    android:id="@+id/remote_record_time_during"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <ImageView
                android:id="@+id/remote_record_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flag_selector"
                android:focusable="true"/>
        <ImageView
                android:id="@+id/remote_record_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/start_selector"/>
        <ImageView
                android:id="@+id/remote_record_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/record_done_selector"/>
    </LinearLayout>


</LinearLayout>