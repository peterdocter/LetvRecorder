<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leui="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/record_item_padding_left"
    android:paddingRight="@dimen/record_item_padding_right"
    android:minHeight="@dimen/record_item_height">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/record_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_recorder"
            android:textSize="@dimen/textSizeLage"
            android:includeFontPadding="false"
            android:textColor="@color/title_color" />

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:textColor="@color/summary_color"
                android:includeFontPadding="false"
                android:textSize="@dimen/textSizeMedium"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/record_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/summary_color"
        android:includeFontPadding="false"
        android:textSize="@dimen/textSizeMedium"/>

    <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:src="@drawable/ic_rec_call_arrow"/>

    <com.letv.leui.widget.LeCheckBox
        android:id="@+id/item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:clickable="false"
        leui:leBoxOnColor="#ff0000"
        android:focusable="false"
        android:visibility="gone" />


</LinearLayout>